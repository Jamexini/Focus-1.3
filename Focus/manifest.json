{
  "manifest_version": 3,
  "name": "Focus",
  "version": "2.0.0",
  "description": "Premium focus timer with Pomodoro, site blocking, time tracking, and stats.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Minimal"
  },
  "icons": {
    "128": "images/icon.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}